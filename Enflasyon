local function LoadCurrencyScript()if not game:IsLoaded()then game.Loaded:Wait()end repeat task.wait()until game:GetService("Players").LocalPlayer local Http=game:GetService("HttpService")local CoreGui=game:GetService("CoreGui")local TweenService=game:GetService("TweenService")local currencyData={{Code="USD",Name="US Dollar",Symbol="$"},{Code="TRY",Name="Turkish Lira",Symbol="₺"},{Code="EUR",Name="Euro",Symbol="€"},{Code="GBP",Name="British Pound",Symbol="£"},{Code="JPY",Name="Japanese Yen",Symbol="¥"},{Code="CAD",Name="Canadian Dollar",Symbol="C$"},{Code="AUD",Name="Australian Dollar",Symbol="A$"},{Code="CHF",Name="Swiss Franc",Symbol="CHF"},{Code="CNY",Name="Chinese Yuan",Symbol="¥"},{Code="RUB",Name="Russian Ruble",Symbol="₽"},{Code="INR",Name="Indian Rupee",Symbol="₹"},{Code="BRL",Name="Brazilian Real",Symbol="R$"},{Code="KRW",Name="South Korean Won",Symbol="₩"},{Code="MXN",Name="Mexican Peso",Symbol="$"},{Code="IDR",Name="Indonesian Rupiah",Symbol="Rp"},{Code="SAR",Name="Saudi Riyal",Symbol="﷼"},{Code="AED",Name="UAE Dirham",Symbol="د.إ"}}local sourceCurrency="TRY"local targetCurrency="USD"local function req(url)local s,res=pcall(function()return game:HttpGetAsync(url)end)if s and res then return{Body=res}end return nil end local function getExchangeRate(from,to,amt)local amount=amt or 1 local url="https://api.exchangerate.host/convert?from="..from.."&to="..to.."&amount="..amount local res=req(url)if res and res.Body then local data=Http:JSONDecode(res.Body)if data.success then return data.result/amount end end return 0.033 end local function findCurrency(code)for _,c in ipairs(currencyData)do if c.Code==code then return c end end return currencyData[1]end local screenGui=Instance.new("ScreenGui")screenGui.Parent=CoreGui local mainFrame=Instance.new("Frame")mainFrame.Size=UDim2.new(0,350,0,300)mainFrame.Position=UDim2.new(0.5,-175,0.5,-150)mainFrame.BackgroundColor3=Color3.fromRGB(32,33,36)mainFrame.Parent=screenGui mainFrame.Active=true mainFrame.Draggable=true Instance.new("UICorner",mainFrame)local header=Instance.new("Frame")header.Size=UDim2.new(1,0,0,40)header.BackgroundColor3=Color3.fromRGB(40,41,44)header.Parent=mainFrame Instance.new("UICorner",header)local title=Instance.new("TextLabel")title.Size=UDim2.new(1,-40,1,0)title.Position=UDim2.new(0,15,0,0)title.BackgroundTransparency=1 title.Text="Currency Converter"title.TextColor3=Color3.fromRGB(255,255,255)title.Font=Enum.Font.GothamBold title.TextSize=16 title.TextXAlignment=Enum.TextXAlignment.Left title.Parent=header local closeBtn=Instance.new("TextButton")closeBtn.Size=UDim2.new(0,35,1,0)closeBtn.Position=UDim2.new(1,-35,0,0)closeBtn.BackgroundTransparency=1 closeBtn.Text="×"closeBtn.TextColor3=Color3.fromRGB(255,255,255)closeBtn.TextSize=20 closeBtn.Font=Enum.Font.GothamBold closeBtn.Parent=header local content=Instance.new("Frame")content.Size=UDim2.new(1,0,1,-40)content.Position=UDim2.new(0,0,0,40)content.BackgroundTransparency=1 content.Parent=mainFrame local inputFrame=Instance.new("Frame")inputFrame.Size=UDim2.new(1,-20,0,120)inputFrame.Position=UDim2.new(0,10,0,10)inputFrame.BackgroundColor3=Color3.fromRGB(48,49,52)inputFrame.Parent=content Instance.new("UICorner",inputFrame)local srcBtn=Instance.new("TextButton")srcBtn.Size=UDim2.new(0,120,0,30)srcBtn.Position=UDim2.new(0,10,0,10)srcBtn.BackgroundColor3=Color3.fromRGB(60,64,67)srcBtn.Text="TRY - Turkish Lira"srcBtn.TextColor3=Color3.fromRGB(255,255,255)srcBtn.Font=Enum.Font.Gotham srcBtn.TextSize=12 srcBtn.Parent=inputFrame Instance.new("UICorner",srcBtn)local swapBtn=Instance.new("TextButton")swapBtn.Size=UDim2.new(0,30,0,30)swapBtn.Position=UDim2.new(0.5,-15,0,10)swapBtn.BackgroundTransparency=1 swapBtn.Text="⇄"swapBtn.TextColor3=Color3.fromRGB(138,180,248)swapBtn.Font=Enum.Font.GothamBold swapBtn.TextSize=16 swapBtn.Parent=inputFrame local trgBtn=Instance.new("TextButton")trgBtn.Size=UDim2.new(0,120,0,30)trgBtn.Position=UDim2.new(1,-130,0,10)trgBtn.BackgroundColor3=Color3.fromRGB(60,64,67)trgBtn.Text="USD - US Dollar"trgBtn.TextColor3=Color3.fromRGB(255,255,255)trgBtn.Font=Enum.Font.Gotham trgBtn.TextSize=12 trgBtn.Parent=inputFrame Instance.new("UICorner",trgBtn)local amtLabel=Instance.new("TextLabel")amtLabel.Size=UDim2.new(0,60,0,20)amtLabel.Position=UDim2.new(0,10,0,50)amtLabel.BackgroundTransparency=1 amtLabel.Text="Amount:"amtLabel.TextColor3=Color3.fromRGB(255,255,255)amtLabel.Font=Enum.Font.Gotham amtLabel.TextSize=12 amtLabel.TextXAlignment=Enum.TextXAlignment.Left amtLabel.Parent=inputFrame local amtBox=Instance.new("TextBox")amtBox.Size=UDim2.new(1,-85,0,25)amtBox.Position=UDim2.new(0,75,0,50)amtBox.BackgroundColor3=Color3.fromRGB(40,41,44)amtBox.Text="1"amtBox.TextColor3=Color3.fromRGB(255,255,255)amtBox.PlaceholderText="Enter amount"amtBox.Font=Enum.Font.Gotham amtBox.TextSize=12 amtBox.Parent=inputFrame Instance.new("UICorner",amtBox)local convertBtn=Instance.new("TextButton")convertBtn.Size=UDim2.new(0,80,0,25)convertBtn.Position=UDim2.new(0.5,-40,1,-35)convertBtn.BackgroundColor3=Color3.fromRGB(138,180,248)convertBtn.Text="CONVERT"convertBtn.TextColor3=Color3.fromRGB(32,33,36)convertBtn.Font=Enum.Font.GothamBold convertBtn.TextSize=12 convertBtn.Parent=inputFrame Instance.new("UICorner",convertBtn)local outputFrame=Instance.new("Frame")outputFrame.Size=UDim2.new(1,-20,0,110)outputFrame.Position=UDim2.new(0,10,0,140)outputFrame.BackgroundColor3=Color3.fromRGB(48,49,52)outputFrame.Parent=content Instance.new("UICorner",outputFrame)local resultLabel=Instance.new("TextLabel")resultLabel.Size=UDim2.new(1,-20,0,50)resultLabel.Position=UDim2.new(0,10,0,15)resultLabel.BackgroundTransparency=1 resultLabel.Text="1 TRY = 0.033 USD"resultLabel.TextColor3=Color3.fromRGB(138,180,248)resultLabel.Font=Enum.Font.Gotham resultLabel.TextSize=14 resultLabel.TextWrapped=true resultLabel.TextXAlignment=Enum.TextXAlignment.Center resultLabel.Parent=outputFrame local rateLabel=Instance.new("TextLabel")rateLabel.Size=UDim2.new(1,-20,0,20)rateLabel.Position=UDim2.new(0,10,0,70)rateLabel.BackgroundTransparency=1 rateLabel.Text="1 TRY = 0.033000 USD"rateLabel.TextColor3=Color3.fromRGB(200,200,200)rateLabel.Font=Enum.Font.Gotham rateLabel.TextSize=11 rateLabel.TextXAlignment=Enum.TextXAlignment.Center rateLabel.Parent=outputFrame local copyBtn=Instance.new("TextButton")copyBtn.Size=UDim2.new(0,70,0,25)copyBtn.Position=UDim2.new(0.5,-35,1,-30)copyBtn.BackgroundColor3=Color3.fromRGB(138,180,248)copyBtn.Text="Copy"copyBtn.TextColor3=Color3.fromRGB(32,33,36)copyBtn.Font=Enum.Font.Gotham copyBtn.TextSize=12 copyBtn.Parent=outputFrame Instance.new("UICorner",copyBtn)local currencyFrame=Instance.new("Frame")currencyFrame.Size=UDim2.new(0,300,0,350)currencyFrame.Position=UDim2.new(0.5,-150,0.5,-175)currencyFrame.BackgroundColor3=Color3.fromRGB(32,33,36)currencyFrame.Visible=false currencyFrame.Parent=screenGui currencyFrame.Active=true currencyFrame.Draggable=true Instance.new("UICorner",currencyFrame)local function showCurrencySelector(isSource)for _,v in ipairs(currencyFrame:GetChildren())do v:Destroy()end local header=Instance.new("Frame")header.Size=UDim2.new(1,0,0,40)header.BackgroundColor3=Color3.fromRGB(40,41,44)header.Parent=currencyFrame Instance.new("UICorner",header)local title=Instance.new("TextLabel")title.Size=UDim2.new(1,-40,1,0)title.Position=UDim2.new(0,15,0,0)title.BackgroundTransparency=1 title.Text="Select Currency"title.TextColor3=Color3.fromRGB(255,255,255)title.Font=Enum.Font.GothamBold title.TextSize=14 title.TextXAlignment=Enum.TextXAlignment.Left title.Parent=header local closeBtn2=Instance.new("TextButton")closeBtn2.Size=UDim2.new(0,40,1,0)closeBtn2.Position=UDim2.new(1,-40,0,0)closeBtn2.BackgroundTransparency=1 closeBtn2.Text="×"closeBtn2.TextColor3=Color3.fromRGB(255,255,255)closeBtn2.TextSize=20 closeBtn2.Parent=header local searchBox=Instance.new("TextBox")searchBox.Size=UDim2.new(1,-20,0,35)searchBox.Position=UDim2.new(0,10,0,50)searchBox.BackgroundColor3=Color3.fromRGB(48,49,52)searchBox.Text=""searchBox.PlaceholderText="Search..."searchBox.TextColor3=Color3.fromRGB(255,255,255)searchBox.Font=Enum.Font.Gotham searchBox.TextSize=12 searchBox.Parent=currencyFrame Instance.new("UICorner",searchBox)local scroll=Instance.new("ScrollingFrame")scroll.Size=UDim2.new(1,-20,1,-100)scroll.Position=UDim2.new(0,10,0,95)scroll.BackgroundTransparency=1 scroll.ScrollBarThickness=6 scroll.Parent=currencyFrame local layout=Instance.new("UIListLayout")layout.Parent=scroll layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()scroll.CanvasSize=UDim2.new(0,0,0,layout.AbsoluteContentSize.Y)end)local function updateList()for _,v in ipairs(scroll:GetChildren())do if v:IsA("TextButton")then v:Destroy()end end local search=string.lower(searchBox.Text)for _,curr in ipairs(currencyData)do if search==""or string.find(string.lower(curr.Name),search)or string.find(string.lower(curr.Code),search)then local btn=Instance.new("TextButton")btn.Size=UDim2.new(1,0,0,35)btn.BackgroundColor3=Color3.fromRGB(48,49,52)btn.Text=curr.Code.." - "..curr.Name btn.TextColor3=Color3.fromRGB(255,255,255)btn.Font=Enum.Font.Gotham btn.TextSize=12 btn.TextXAlignment=Enum.TextXAlignment.Left btn.Parent=scroll Instance.new("UICorner",btn)Instance.new("UIPadding",btn).PaddingLeft=UDim.new(0,10)btn.MouseButton1Click:Connect(function()if isSource then sourceCurrency=curr.Code srcBtn.Text=curr.Code.." - "..curr.Name else targetCurrency=curr.Code trgBtn.Text=curr.Code.." - "..curr.Name end currencyFrame.Visible=false convertCurrency()end)end end end searchBox.Changed:Connect(updateList)closeBtn2.MouseButton1Click:Connect(function()currencyFrame.Visible=false end)updateList()end currencyFrame.Visible=true end local function convertCurrency()local amt=tonumber(amtBox.Text)or 1 resultLabel.TextColor3=Color3.fromRGB(154,160,166)resultLabel.Text="Converting..."rateLabel.Text="Getting rate..."local rate=getExchangeRate(sourceCurrency,targetCurrency,amt)if rate then local src=findCurrency(sourceCurrency)local trg=findCurrency(targetCurrency)local converted=amt*rate resultLabel.TextColor3=Color3.fromRGB(138,180,248)resultLabel.Text=string.format("%s %.2f = %s %.2f",src.Symbol,amt,trg.Symbol,converted)rateLabel.Text=string.format("1 %s = %.6f %s",sourceCurrency,rate,targetCurrency)else resultLabel.TextColor3=Color3.fromRGB(255,100,100)resultLabel.Text="Failed to get rate"rateLabel.Text="Try again"end end srcBtn.MouseButton1Click:Connect(function()showCurrencySelector(true)end)trgBtn.MouseButton1Click:Connect(function()showCurrencySelector(false)end)swapBtn.MouseButton1Click:Connect(function()local temp=sourceCurrency sourceCurrency=targetCurrency targetCurrency=temp srcBtn.Text=sourceCurrency.." - "..findCurrency(sourceCurrency).Name trgBtn.Text=targetCurrency.." - "..findCurrency(targetCurrency).Name convertCurrency()end)convertBtn.MouseButton1Click:Connect(convertCurrency)amtBox.FocusLost:Connect(function(enter)if enter then convertCurrency()end end)copyBtn.MouseButton1Click:Connect(function()setclipboard(resultLabel.Text)end)closeBtn.MouseButton1Click:Connect(function()screenGui:Destroy()end)convertCurrency()end LoadCurrencyScript()
