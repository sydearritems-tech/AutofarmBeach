local sourceCurrency="TRY"
local targetCurrency="USD"
local function req(opt)
local fn=(syn and syn.request)or(http and http.request)or(http_request or(request or fluxus.request))
if fn then local s,e=pcall(function()return fn(opt)end)if s then return e end end
return game:GetService("HttpService"):RequestAsync(opt)
end
local function getExchangeRate(fromCurr,toCurr,amount)
local url="https://api.exchangerate.host/convert?from="..fromCurr.."&to="..toCurr.."&amount="..(amount or 1)
local res=req({Url=url,Method="GET"})
if res and res.Body then
local data=game:GetService("HttpService"):JSONDecode(res.Body)
if data and data.success and data.result then return data.result/(amount or 1)end
end
local url2="https://cdn.jsdelivr.net/npm/@fawazahmed0/currency-api@latest/v1/currencies/"..string.lower(fromCurr)..".json"
local res2=req({Url=url2,Method="GET"})
if res2 and res2.Body then
local data=game:GetService("HttpService"):JSONDecode(res2.Body)
local rates=data[string.lower(fromCurr)]
if rates and rates[string.lower(toCurr)]then return rates[string.lower(toCurr)]end
end
local url3="https://open.er-api.com/v6/latest/"..fromCurr
local res3=req({Url=url3,Method="GET"})
if res3 and res3.Body then
local data=game:GetService("HttpService"):JSONDecode(res3.Body)
if data and data.rates and data.rates[toCurr]then return data.rates[toCurr]end
end
return nil
end
local function findCurrencyByCode(code)
for _,c in ipairs(currencyData)do if c.Code==code then return c end end
return currencyData[1]
end
